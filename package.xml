<package>
  <name>rostest</name>
  <version>1.9.22</version>
  <description>
     Integration test suite based on roslaunch that is compatible with xUnit frameworks.
  </description>
  <maintainer email="dthomas@willowgarage.com">Dirk Thomas</maintainer>
  <license>BSD</license>

  <url>http://ros.org/wiki/rostest</url>
  <author>Ken Conley</author>

  <build_depend>boost</build_depend>
  <build_depend>catkin</build_depend>
  <build_depend>rosunit</build_depend>

  <run_depend>boost</run_depend>
  <!--<run_depend>rospy</run_depend> This one should be here but there is a circular dependency: rospy run depends on rosgraph which build depends on rostest -->
  <run_depend>rosunit</run_depend>

  <test_depend>boost</test_depend>
  <!--<test_depend>rospy</test_depend>-->
  <test_depend>rosunit</test_depend>

  <export>
    <rosdoc config="rosdoc.yaml"/>
  </export>
</package>
